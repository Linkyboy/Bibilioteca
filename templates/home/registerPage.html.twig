{% extends 'base.html.twig' %}
{% block body %}
    <div class="container ">
    <h1 class="text-center">Register</h1>
    {{ form_start(form) }}
        <div class="form-group">
            <label for="email">{{form_label(form.email)}}</label>
            {{form_widget(form.email,{'attr': {'class': 'form-control'},'id':"email"})}}
        </div>
        <div class="form-group">
            <label for="password">{{form_label(form.password)}}</label>
            {{form_widget(form.password,{'attr': {'class': 'form-control'},'id':"email"})}}
        </div>
        <div class="form-group">
            <label for="userName">{{form_label(form.userName)}}</label>
            {{form_widget(form.userName,{'attr': {'class': 'form-control'},'id':"userName"})}}
        </div>
        <div class="form-group">
            <label for="firstName">{{form_label(form.firstName)}}</label>
            {{form_widget(form.firstName,{'attr': {'class': 'form-control'},'id':"firstName"})}}
        </div>
        <div class="form-group">
            <label for="lastName">{{form_label(form.lastName)}}</label>
            {{form_widget(form.lastName,{'attr': {'class': 'form-control'},'id':"lastName"})}}
        </div>
        <div class="form-group">
            <label for="phoneNumber">{{form_label(form.phoneNumber)}}</label>
            {{form_widget(form.phoneNumber,{'attr': {'class': 'form-control'},'id':"phoneNumber"})}}
        </div>
        <div class="form-group">
            <label for="address">{{form_label(form.address)}}</label>
            {{form_widget(form.address,{'attr': {'class': 'form-control'},'id':"address"})}}
        </div>
        {{ form_widget(form) }}
        <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
    {{ form_end(form) }}
    </div>
{% endblock %}